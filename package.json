{
  "name": "node-nails",
  "description": "Rails, in Node",
  "author": "ArtOfCode",
  "version": "0.5.1",
  "repository": "https://github.com/ArtOfCode-/nails",
  "license": "MIT",
  "bugs": "https://github.com/ArtOfCode-/nails/issues",
  "scripts": {
    "update-submodules": "git submodule update --remote --force",
    "test": "npm run unit && npm run lint",
    "lint": "xo && echo \"No lint issues!\\nxo ðŸ’š you\"",
    "unit": "istanbul cover _mocha",
    "unit-dev": "watch \"clear && npm run unit -- --print none\" -p '/coverage|.git/' ."
  },
  "main": "src/nails.js",
  "xo": {
    "space": true,
    "envs": [
      "node"
    ],
    "ignores": [
      "nails-example/**"
    ],
    "rules": {
      "no-var": "error",
      "comma-dangle": ["error", "always-multiline"],
      "no-eq-null": "off",
      "eqeqeq": [
        "error",
        "smart"
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "no-multi-assign": "off"
    }
  },
  "devDependencies": {
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "mock-req": "^0.2.0",
    "mock-res": "^0.3.3",
    "xo": "~0.18.0"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "cookies": "^0.7.0",
    "debug": "^2.6.3",
    "ejs": "^2.5.6",
    "glob": "~7.1.1",
    "mz": "^2.6.0",
    "path-to-regexp": "^1.7.0",
    "rewire": "^2.5.2",
    "socket.io": "^1.7.3",
    "validate": "^3.0.1"
  }
}
