{
  "name": "node-nails",
  "description": "Rails, in Node",
  "author": "ArtOfCode",
  "version": "0.5.1",
  "repository": "https://github.com/ArtOfCode-/nails",
  "license": "MIT",
  "bugs": "https://github.com/ArtOfCode-/nails/issues",
  "scripts": {
    "test": "mocha && xo"
  },
  "main": "src/nails.js",
  "xo": {
    "space": true,
    "envs": [
      "node"
    ],
    "ignores": [
      "nails-example/**"
    ],
    "rules": {
      "no-var": "error",
      "quotes": 0,
      "no-eval": 1,
      "import/no-unassigned-import": 0,
      "import/no-dynamic-require": 0,
      "camelcase": 1,
      "brace-style": 0,
      "no-prototype-builtins": 0,
      "dot-notation": 0,
      "linebreak-style": "off",
      "comma-dangle": "off",
      "no-eq-null": "off",
      "no-loop-func": 0,
      "eqeqeq": [
        "error",
        "smart"
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "no-multi-assign": "off",
      "func-names": "off",
      "unicorn/filename-case": "off",
      "unicorn/no-process-exit": 0,
      "max-params": [
        1,
        5
      ]
    }
  },
  "devDependencies": {
    "mocha": "^3.2.0",
    "mock-req": "^0.2.0",
    "mock-res": "^0.3.3",
    "xo": "~0.18.0"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "debug": "^2.6.3",
    "ejs": "^2.5.6",
    "glob": "~7.1.1",
    "mz": "^2.6.0",
    "rewire": "^2.5.2",
    "validate": "^3.0.1",
    "websocket": "~1.0.24"
  }
}
