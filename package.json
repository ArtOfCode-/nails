{
  "name": "node-nails",
  "description": "Rails, in Node",
  "author": "ArtOfCode",
  "version": "0.5.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArtOfCode-/nails.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ArtOfCode-/nails/issues"
  },
  "scripts": {
    "update-submodules": "git submodule update --remote --force",
    "test": "npm run --silent unit && npm run --silent lint",
    "lint": "xo && echo \"No lint issues!\\nxo ðŸ’š you\"",
    "unit": "istanbul cover _mocha --trace-sync-io",
    "unit-ci": "script/unit-ci.sh",
    "dev-unit": "watch \"clear && npm run --silent unit -- --print none\" -p '/coverage|.git/' .",
    "dev-mocha": "watch \"clear && mocha\" -p '/coverage|.git/' .",
    "serve-cov": "live-server coverage/lcov-report",
    "format-pkg": "npm init -y > /dev/null",
    "contribute": "all-contributors add",
    "generate": "all-contributors generate",
    "jekyll-ci": "script/jekyll-ci.sh",
    "dev-doc": "watch 'script/dev-doc.sh' -p '/docs|.git|_site/' .",
    "doc": "script/doc.sh"
  },
  "main": "src/nails.js",
  "xo": {
    "space": true,
    "envs": [
      "node"
    ],
    "settings": {
      "mocha": {
        "additionalTestFunctions": [
          "when",
          "specify"
        ]
      }
    },
    "ignores": [
      "nails-example/**"
    ],
    "plugins": [
      "mocha"
    ],
    "rules": {
      "mocha/handle-done-callback": "error",
      "mocha/no-exclusive-tests": "warn",
      "mocha/no-global-tests": "error",
      "mocha/no-hooks-for-single-case": "error",
      "mocha/no-identical-title": "error",
      "mocha/no-nested-tests": "error",
      "mocha/no-pending-tests": "warn",
      "mocha/no-return-and-callback": "error",
      "mocha/no-sibling-hooks": "error",
      "mocha/no-skipped-tests": "warn",
      "mocha/no-top-level-hooks": "error",
      "no-var": "error",
      "no-console": "warn",
      "spaced-comment": [
        "error",
        "always",
        {
          "block": {
            "exceptions": [
              "*"
            ],
            "balanced": true
          }
        }
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "require-jsdoc": [
        "warn",
        {
          "require": {
            "FunctionDeclaration": true,
            "MethodDefinition": true,
            "ClassDeclaration": true,
            "ArrowFunctionExpression": false
          }
        }
      ],
      "valid-jsdoc": [
        "error",
        {
          "requireReturn": false,
          "prefer": {
            "arg": "param",
            "argument": "param",
            "return": "returns",
            "virtual": "abstract"
          }
        }
      ],
      "no-eq-null": "off",
      "eqeqeq": [
        "error",
        "smart"
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true
        }
      ],
      "no-multi-assign": "off"
    }
  },
  "devDependencies": {
    "all-contributors-cli": "^4.3.0",
    "eslint-plugin-mocha": "^4.9.0",
    "istanbul": "^0.4.5",
    "jsdoc-to-markdown": "^3.0.0",
    "live-server": "^1.2.0",
    "lodash.times": "^4.3.2",
    "mocha": "^4.0.0",
    "mock-req": "^0.2.0",
    "mock-res": "^0.5.0",
    "number-to-words": "^1.2.3",
    "watch": "^1.0.2",
    "xo": "~0.18.0"
  },
  "dependencies": {
    "basic-auth": "^2.0.0",
    "chalk": "^2.0.1",
    "connect": "^3.6.1",
    "cookies": "^0.7.0",
    "debug": "^3.0.0",
    "fast-url-parser": "^1.1.3",
    "finalhandler": "^1.0.2",
    "glob": "~7.1.1",
    "lodash.defaults": "^4.2.0",
    "lodash.template": "^4.4.0",
    "lodash.templatesettings": "^4.1.0",
    "methods": "^1.1.2",
    "moment": "^2.18.1",
    "mz": "^2.6.0",
    "path-to-regexp": "^2.0.0",
    "qs": "^6.4.0",
    "rewire": "^3.0.0",
    "socket.io": "^2.0.0",
    "statuses": "^1.3.1",
    "validate": "^3.0.1"
  },
  "homepage": "https://github.com/ArtOfCode-/nails#readme",
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "keywords": []
}
